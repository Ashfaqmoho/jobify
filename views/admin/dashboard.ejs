<div class="admin-title">
    <h3>Posts</h2>
        <a href="/add-job" class="button">+ Add New</a>
</div>

<ul class="admin-posts">

    <% data.forEach(jobs=> { %>
        <li>
            <a href="/job/<%= jobs._id %>">
                <%= jobs.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/edit-job/ <%= jobs._id %>" class="btn">Edit</a>

                <form action="/delete-job/<%= jobs._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn-delete btn">
                </form>
            </div>
        </li>
        <% }) %>

</ul>